@page "/profile"
@inject IAuthService AuthService
@attribute [Authorize]

<MudPaper Class="pa-4">
    <AuthorizeView>
        <Authorized Context="authContext">
            <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
                <MudText Typo="Typo.h4" GutterBottom>
                    Xin chào, <i>@authContext.User.Identity.Name</i>!
                </MudText>

                <!-- Đổi mật khẩu -->
                <MudDivider Class="my-4" />
                <MudText Typo="Typo.h5" GutterBottom>
                    Đổi mật khẩu
                </MudText>

                <MudForm @ref="form" OnValidSubmit="ChangePassword">
                    <MudTextField @bind-Value="request.Password"
                                  Label="Mật khẩu mới"
                                  Type="password"
                                  Required="true"
                                  Class="mb-3" />
                    <MudTextField @bind-Value="request.ConfirmPassword"
                                  Label="Xác nhận mật khẩu"
                                  Type="password"
                                  Required="true"
                                  Class="mb-3" />
                    <MudButton Type="Submit" Variant="Variant.Filled" Color="Color.Primary" FullWidth>
                        Đổi mật khẩu
                    </MudButton>
                </MudForm>

                @if (!string.IsNullOrEmpty(message))
                {
                    <MudAlert Severity="Severity.Info" Elevation="1" Class="mt-3">
                        @message
                    </MudAlert>
                }
            </MudContainer>
        </Authorized>
        <NotAuthorized>
            <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-5">
                <MudAlert Severity="Severity.Error" Elevation="2">
                    <MudText Typo="Typo.h6" GutterBottom>
                        Bạn chưa được cấp quyền để xem trang này.
                    </MudText>
                    <MudText>
                        Vui lòng
                        <MudLink Href="login">đăng nhập</MudLink>
                        hoặc
                        <MudLink Href="register">đăng ký</MudLink>
                        để tiếp tục.
                    </MudText>
                </MudAlert>
            </MudContainer>
        </NotAuthorized>
    </AuthorizeView>
</MudPaper>

@code {
    private MudForm form;
    private UserChangePassword request = new UserChangePassword();
    private string message = string.Empty;

    private async Task ChangePassword()
    {
        if (form.IsValid)
        {
            var result = await AuthService.ChangePassword(request);
            message = result.Message;
        }
        else
        {
            message = "Vui lòng nhập đầy đủ thông tin.";
        }
    }
}
